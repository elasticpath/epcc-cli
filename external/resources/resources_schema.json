{
  "$id": "https://example.com/product.schema.json",
  "type": "object",
  "propertyNames": {
    "pattern": "^[A-Za-z-][A-Za-z0-9-]*$"
  },
  "patternProperties": {
    "(.*?)": {
      "type" : "object",
      "properties": {
        "docs": { "type": "string", "pattern": "^https://"  },
        "get-collection": {
          "type": "object",
          "properties" : {
            "docs": { "type": "string", "pattern": "^https://"  },
            "url": { "type": "string" },
            "content-type": { "type": "string" }
          },
          "required": [ "url", "docs"]
        },
        "get-entity": {
          "type": "object",
          "properties" : {
            "docs": { "type": "string", "pattern": "^https://" },
            "url": { "type": "string" },
            "content-type": { "type": "string" }
          },
          "required": [ "url", "docs"]
        },
        "update-entity": {
          "type": "object",
          "properties" : {
            "docs": { "type": "string", "pattern": "^https://"  },
            "url": { "type": "string" },
            "content-type": { "type": "string" }
          },
          "required": [ "url", "docs"]
        },
        "create-entity": {
          "type": "object",
          "properties" : {
            "docs": { "type": "string", "pattern": "^https://"  },
            "url": { "type": "string" },
            "content-type": { "type": "string" }
          },
          "required": [ "url", "docs"]
        },
        "delete-entity": {
          "type": "object",
          "properties" : {
            "docs": { "type": "string",  "pattern": "^https://"  },
            "url": { "type": "string" },
            "content-type": { "type": "string" }
          },
          "required": [ "url", "docs"]
        },
        "attributes": {
          "type": "object",
          "patternProperties": {
            "(.*?)": {
              "type" : "object",
              "properties": {
                "type": {
                  "type": "string",
                  "pattern": "(^STRING$|^URL$|^INT$|^ENUM|^FLOAT$|^BOOL$|^FILE$|^CURRENCY$|^RESOURCE_ID)"
                }
              },
              "required": ["type"]
            }
          }
        }
      },
      "required": [ "json-api-type", "json-api-format", "docs"]
    }
  }
}