{
  "$id": "https://github.com/elasticpath/epcc-cli/blob/main/external/resources/resources_schema.json",
  "type": "object",
  "propertyNames": {
    "pattern": "^[A-Za-z-][A-Za-z0-9-]*$"
  },
  "patternProperties": {
    "(.*?)": {
      "type" : "object",
      "additionalProperties": false,
      "properties": {
        "singular-name": {
          "type":"string",
          "pattern": "^[A-Za-z-][A-Za-z0-9-]*$"
        },
        "json-api-type": {
          "type":"string",
          "pattern": "^[A-Za-z-_]+$"
        },
        "json-api-format": {
          "type":"string",
          "enum": ["compliant", "legacy"]
        },
        "alternate-json-type-for-aliases": {
          "type":"array"
        },
        "no-wrapping": {
          "type": "boolean"
        },
        "suppress-reset-warning": {
          "type": "boolean"
        },
        "legacy": {
          "type": "boolean"
        },
        "docs": { "type": "string", "pattern": "^(https?://|n/a$)"  },
        "get-collection": {
          "type": "object",
          "additionalProperties": false,
          "properties" : {
            "docs": { "type": "string", "pattern": "^(https?://|n/a$)"  },
            "url": { "type": "string" },
            "content-type": { "type": "string" },
            "parent_resource_value_overrides": { "type":  "object" },
            "query": { "type":  "string" },
            "openapi_operation_id": { "type":  "string" }
          },
          "required": [ "url", "docs"]
        },
        "get-entity": {
          "type": "object",
          "properties" : {
            "docs": { "type": "string", "pattern": "^(https?://|n/a$)" },
            "url": { "type": "string" },
            "content-type": { "type": "string" },
            "parent_resource_value_overrides": { "type":  "object" },
            "query": { "type":  "string" }
          },
          "required": [ "url", "docs"]
        },
        "update-entity": {
          "type": "object",
          "properties" : {
            "docs": { "type": "string", "pattern": "^(https?://|n/a$)"  },
            "url": { "type": "string" },
            "content-type": { "type": "string" },
            "parent_resource_value_overrides": { "type":  "object" }
          },
          "required": [ "url", "docs"]
        },
        "create-entity": {
          "type": "object",
          "properties" : {
            "docs": { "type": "string", "pattern": "^(https?://|n/a$)"  },
            "url": { "type": "string" },
            "content-type": { "type": "string" },
            "parent_resource_value_overrides": { "type":  "object" }
          },
          "required": [ "url", "docs"]
        },
        "delete-entity": {
          "type": "object",
          "properties" : {
            "docs": { "type": "string",  "pattern": "^(https?://|n/a$)"  },
            "url": { "type": "string" },
            "min": { "type": "integer" }
          },
          "required": [ "url", "docs"]
        },
        "attributes": {
          "type": "object",
          "patternProperties": {
            "(.*?)": {
              "additionalProperties": false,
              "type" : "object",
              "properties": {
                "type": {
                  "type": "string",
                  "pattern": "^(STRING|URL|INT|CONST:[a-z0-9A-Z._-]+|ENUM:[a-z0-9A-Z._,-]+|FLOAT|BOOL|FILE|CURRENCY|SINGULAR_RESOURCE_TYPE|JSON_API_TYPE|PRIMITIVE|RESOURCE_ID:([a-z0-9-]+|[*]))$"
                },
                "autofill": {
                  "type": "string",
                  "pattern": "^(FUNC:|VALUE:).+$",
                  "description": "What the value should be set to when we are using --auto-fill. FUNC: will point to a function listed here: https://github.com/brianvoe/gofakeit#function, only zero argument functions are allowed. VALUE: will set to the literal"
                },
                "usage": {
                  "type": "string",
                  "description": "Overrides the help documentation for this attribute."
                },
                "alias_attribute": {
                  "type": "string",
                  "enum": [
                    "id",
                    "sku",
                    "code",
                    "slug",
                    "name"
                  ]
                }
              },
              "required": ["type"]
            }
          }
        }
      },
      "required": [ "json-api-type", "json-api-format", "docs", "singular-name"]
    }
  }
}
